<Window x:Class="EmailApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="sendBtn" Content="Send" HorizontalAlignment="Center" Margin="0,360,0,0" VerticalAlignment="Top" Height="30" Width="90" FontSize="20" FontWeight="Bold" Background="Gold" BorderBrush="Gold" Click="sendBtn_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="226,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="374" Height="281" TextChanged="textBox_TextChanged"/>

    </Grid>
</Window>
